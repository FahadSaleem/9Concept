<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/add_shop_header"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backInventory"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="36dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_height="36dp"/>

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:text="Select a size"
            android:layout_centerInParent="true"
            android:fontFamily="@font/appfont_medium"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/add_shop_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/container_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_size_one"
                android:text="1. 4.8cm x 3.2cm"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:fontFamily="@font/appfont_medium"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@color/colorAccent"
                android:textSize="24sp"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/frame_rl_one"
                android:layout_below="@id/tv_size_one"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/frame_bgh"
                android:layout_width="wrap_content"
                android:layout_height="60dp">
                <TextView
                    android:text="Expected Frame Aspect Ratio"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/appfont_medium"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/container_two"
                android:layout_below="@id/container_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_size_two"
                    android:text="2. 25.5 x 12.8cm"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/appfont_medium"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:background="@color/colorAccent"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/frame_rl_two"
                    android:layout_below="@id/tv_size_two"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/frame_bgh"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">
                    <TextView
                        android:text="Expected Frame Aspect Ratio"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/appfont_medium"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textSize="24sp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/container_three"
                android:layout_below="@id/container_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_size_three"
                    android:text="3. 25.5 x 25.5cm"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/appfont_medium"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:background="@color/colorAccent"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:id="@+id/frame_rl_three"
                    android:layout_below="@id/tv_size_three"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/frame_bgh"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">
                    <TextView
                        android:text="Expected Frame Aspect Ratio"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/appfont_medium"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textSize="24sp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>